{% block _logo_widget %}
    {% set attr_img = {} %}

    {% set companyLogo = dtc_company_logo() %}
    {% if companyLogo %}
        {% set attr_img = attr_img|merge({'src' : companyLogo, 'class': 'dtc-company-logo'}) %}
    {% endif %}

    {% set companyName = dtc_config_value('ystools_dtc.company_name') %}
    {% if companyName %}
        {% set attr_img = attr_img|merge({'alt' : companyName}) %}
    {% endif %}

    {{ block('logo_widget') }}
{% endblock %}
